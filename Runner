import java.util.Scanner;

/**
 * A simple class to run the Chatbot class.
 * @author Laurie White
 * @version April 2012
 */
public class ChatbotRunner
{

	/**
	 * Create a Chatbot, give it user input, and print its replies.
	 */
	public static void main(String[] args)
	{
		Chatbot cb = new Chatbot();
		
		System.out.println (cb.getResponse("Yeah, Mr.Hill is my favorite teacher"));
		Scanner in = new Scanner (System.in);
    
    String statement;

	while (!(statement = in.nextLine()).equals("Bye")) {
    System.out.println(cb.getResponse(statement));
	}
	}
}
